<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.sampath.pdfviewer</groupId>
  <artifactId>CleanView</artifactId>
  <name>CleanView</name>
  <version>1.0</version>
  <url>http://maven.apache.org</url>
  <build>
    <plugins>
      <plugin>
        <groupId>org.openjfx</groupId>
        <artifactId>javafx-maven-plugin</artifactId>
        <version>0.0.8</version>
        <configuration>
          <mainClass>com.sampath.pdfviewer.CleanView</mainClass>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.5.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>com.sampath.pdfviewer.CleanView</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.panteleyev</groupId>
        <artifactId>jpackage-maven-plugin</artifactId>
        <version>1.5.0</version>
        <executions>
          <execution>
            <id>create-installer</id>
            <goals>
              <goal>jpackage</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <name>CleanView</name>
          <input>${project.build.directory}</input>
          <mainJar>CleanView-1.0.jar</mainJar>
          <mainClass>com.sampath.pdfviewer.CleanView</mainClass>
          <type>EXE</type>
          <destination>${project.build.directory}/installer</destination>
          <icon>src/main/resources/icon.ico</icon>
          <appVersion>1.0</appVersion>
          <vendor>Medarametla Solutions</vendor>
          <description>Clean View PDF Viewer</description>
          <runtimeImage>${project.build.directory}/runtime</runtimeImage>
          <licenseFile>src/main/resources/license.txt</licenseFile>
          <winMenu>true</winMenu>
          <winShortcut>true</winShortcut>
          <winMenuGroup>Pdf Tools</winMenuGroup>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
</project>
